<link rel="stylesheet" href="/admin-style/customers.css">

<%- include('../partials/admin/header') %>
<main class="main-content" id="mainContent">
  <div class="content-header row mb-4">
    <h2 class="content-title">Customers</h2>
  </div>

  <!-- Search Section -->
  <div class="search-container mb-4">
    <form action="/admin/users/" method="get" class="search-form">
      <div class="search-box">
        <input type="text" class="search-input" placeholder="Search customers..." name="search">
        <button class="search-button" type="submit">Search</button>
      </div>
    </form>
  </div>

  <!-- Customers Table -->
  <div class="card customers-card">
    <div class="card-body">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone No</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% if (customers.length > 0) { %>
            <% customers.forEach(customer => { %>
              <tr>
                <td><%= customer.fullname %></td>
                <td><%= customer.email %></td>
                <td><%= customer.phone %></td>
                <td>
                  <% if (!customer.isBlocked) { %>
                    <a href="/admin/blockCustomer?id=<%= customer._id %>" class="btn btn-danger">Block</a>
                  <% } else { %>
                    <a href="/admin/UnblockCustomer?id=<%= customer._id %>" class="btn btn-success">Unblock</a>
                  <% } %>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="4" class="text-center">No customers found</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Pagination -->
  <div class="pagination-container">
    <nav aria-label="Page navigation">
      <ul class="pagination"></ul>
    </nav>
  </div>
</main>
<%- include('../partials/admin/footer') %>

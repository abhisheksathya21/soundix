      }

      .btn-outline-dark:hover {
        background-color: var(--brand-black);
        border-color: var(--brand-black);
      }

      .nav-link {
        color: var(--brand-black);
        font-weight: 500;
      }

      .nav-link.hot::after {
        content: "HOT";
        background-color: var(--brand-red);
        color: white;
        font-size: 0.7rem;
        padding: 0.2rem 0.4rem;
